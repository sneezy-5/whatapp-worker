# Multi-stage build for WhatsApp Worker with whatsapp-web.js

# Stage 1: Dependencies
FROM node:22-bookworm-slim AS dependencies

WORKDIR /app

# Install dependencies for Chromium
RUN apt-get update && apt-get install -y \
    git \
    wget \
    gnupg \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package*.json ./

# Install production dependencies
RUN npm install --production && npm cache clean --force

# Stage 2: Runtime
FROM node:22-bookworm-slim

WORKDIR /app

# Install Chromium and ALL necessary system libraries
RUN apt-get update && apt-get install -y \
    chromium \
    fonts-liberation \
    libappindicator3-1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcups2 \
    libdbus-1-3 \
    libgdk-pixbuf2.0-0 \
    libnspr4 \
    libnss3 \
    libx11-xcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    libgbm1 \
    libxss1 \
    libxtst6 \
    libxshmfence1 \
    libglu1-mesa \
    xdg-utils \
    dumb-init \
    && rm -rf /var/lib/apt/lists/*

# Force paths for Puppeteer/Chromium
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
ENV HOME=/app

# Create non-root user and necessary directories
RUN groupadd -r nodejs && useradd -r -g nodejs nodejs && \
    mkdir -p sessions logs .wwebjs_auth /tmp/crashpad && \
    chmod 777 /tmp/crashpad && \
    chown -R nodejs:nodejs /app sessions logs .wwebjs_auth

# Copy dependencies from previous stage
COPY --from=dependencies /app/node_modules ./node_modules

# Copy application code
COPY --chown=nodejs:nodejs . .

# Create necessary directories with proper permissions
RUN mkdir -p sessions logs .wwebjs_auth && \
    chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs:nodejs

# Expose port for health checks if needed
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD node -e "console.log('healthy')" || exit 1

# Use dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]

# Start the worker
CMD ["node", "src/worker.js"]
