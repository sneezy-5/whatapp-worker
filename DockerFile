# Multi-stage build for Node.js Worker

# Stage 1: Dependencies
FROM node:18-alpine AS dependencies

WORKDIR /app

# Installer Git pour les dépendances depuis Git
RUN apk add --no-cache git

# Copier les fichiers package.json et package-lock.json (si existant)
COPY package*.json ./

# Installer uniquement les dépendances de production
RUN npm install --production && npm cache clean --force

# Stage 2: Runtime
FROM node:18-alpine

WORKDIR /app

# Installer dumb-init pour la gestion correcte des signaux
RUN apk add --no-cache dumb-init

# Créer un utilisateur non-root
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs

# Copier les dépendances depuis le stage précédent
COPY --from=dependencies /app/node_modules ./node_modules

# Copier le code de l'application
COPY --chown=nodejs:nodejs . .

# Créer les répertoires nécessaires
RUN mkdir -p sessions logs && \
    chown -R nodejs:nodejs /app

# Utiliser l'utilisateur non-root
USER nodejs:nodejs

# Exposer le port pour les health checks si nécessaire
EXPOSE 3000

# Health check basique
# HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
#   CMD node -e "console.log('healthy')" || exit 1

# Utiliser dumb-init pour gérer les signaux correctement
ENTRYPOINT ["dumb-init", "--"]

# Lancer le worker
CMD ["node", "src/config/worker.js"]
