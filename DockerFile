# Multi-stage build for WhatsApp Worker with whatsapp-web.js
FROM node:20-bullseye AS dependencies

WORKDIR /app

# Install dependencies needed for build (git, etc)
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

COPY package*.json ./
RUN npm install --production && npm cache clean --force

# Stage 2: Runtime
FROM node:20-bullseye

WORKDIR /app

# Install Chromium and required libraries
RUN apt-get update && apt-get install -y \
  chromium \
  fonts-liberation \
  libnss3 \
  libatk-bridge2.0-0 \
  libx11-xcb1 \
  libxcomposite1 \
  libxdamage1 \
  libxrandr2 \
  libgbm1 \
  libasound2 \
  libpangocairo-1.0-0 \
  libgtk-3-0 \
  libxshmfence1 \
  ca-certificates \
  dumb-init \
  --no-install-recommends \
  && rm -rf /var/lib/apt/lists/*

# Environment variables for Puppeteer
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
ENV HOME=/app

# Create necessary directories and set permissions
RUN groupadd -r nodejs && useradd -r -g nodejs nodejs && \
    mkdir -p sessions logs .wwebjs_auth /tmp/crashpad && \
    chmod 777 /tmp/crashpad && \
    chown -R nodejs:nodejs /app sessions logs .wwebjs_auth

# Copy dependencies
COPY --from=dependencies /app/node_modules ./node_modules

# Copy application code
COPY --chown=nodejs:nodejs . .

# Switch to non-root user
USER nodejs:nodejs

# Expose port
EXPOSE 3000

# Use dumb-init
ENTRYPOINT ["dumb-init", "--"]

# Start the worker
CMD ["node", "src/worker.js"]
